@page "/"
@inject NavigationManager navigationManager
@using SW.PrimitiveTypes

<SimplyAlertHub></SimplyAlertHub>

<SimplySearch PageSize="10" SearchUrl="employees" FilterUrl="employees/filters" OnRowClick="RowClick" >
    <Filters>
        <Filter Field="Id" Text="Id" Type="@SearchyDataType.Number"></Filter>
        <Filter Field="HandlerName" Default="true" Text="Handler" Type="@SearchyDataType.Text"></Filter>
        <Filter Field="Started" Text="Date" Type="@SearchyDataType.Date"></Filter>
    </Filters>
    <Columns>
        <Column Field="Id" Title="Id" />
        <Column Field="FirstName" Title="First Name" />
        <Column Field="LastName" Title="Last Name" />
        <Column Field="Age" />
        <Column Field="Married" />
        <Column Field="EmploymentStatus" />
        <Column Field="Country" />
        <Column Field="Salary.Amount" />
        <Column Field="Salary.Currency" />
    </Columns>
</SimplySearch>

@code{

    void RowClick(string index)
    {
        navigationManager.NavigateTo($"/form?id={index}");
    }
}