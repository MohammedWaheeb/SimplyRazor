@inject IServiceProvider  serviceProvider
@using SW.PrimitiveTypes


<SimplySearch PageSize="10" TModel="Employee">
    <Filters>
        <SimplyFilter Field="Id" Text="Id" Type="@SearchyFilterConfigType.Number"></SimplyFilter>
        <SimplyFilter Field="HandlerName" Default="true" Text="Handler" Type="@SearchyFilterConfigType.Text"></SimplyFilter>
        <SimplyFilter Field="Started" Text="Date" Type="@SearchyFilterConfigType.Date"></SimplyFilter>
    </Filters>
