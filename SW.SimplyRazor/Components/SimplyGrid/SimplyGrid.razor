@typeparam TModel
@namespace SW.SimplyRazor

<SimplyGridNonGeneric Data="Data" RowClicked="GridRowClicked" ChildContent="ChildContent" Height="@Height" Width="@Width" />

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public IEnumerable<TModel> Data { get; set; }

    [Parameter]
    public EventCallback<TModel> RowClicked { get; set; }

    [Parameter]
    public string Height { get; set; }

    [Parameter]
    public string Width { get; set; }


    async Task GridRowClicked(object row)
    {
        await RowClicked.InvokeAsync((TModel)row);
    }

}
