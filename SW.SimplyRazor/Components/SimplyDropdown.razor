@namespace SW.SimplyRazor

@if (Visible)
{
    <div class="dropdown-menu" style="display: block; " @onclick="async () => await VisibleChanged.InvokeAsync(false)">
        @ChildContent
    </div>
    <div style="top:0; left:0;  position:fixed; width: 100%;height :100%;z-index:999; " @onclick="async () => await VisibleChanged.InvokeAsync(false)">
    </div>
}

@code {

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public EventCallback<bool> VisibleChanged { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}

