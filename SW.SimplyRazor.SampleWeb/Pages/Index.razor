@page "/"
@inject NavigationManager navigationManager
@using SW.PrimitiveTypes

<SimplyAlertHub></SimplyAlertHub>

<SimplySearch PageSize="10" SearchUrl="https://localhost:5001/cqapi/employees/" OnRowClick="RowClick" >
    <Filters>
        <SimplyFilter Field="Id" Text="Id" Type="@SearchyDataType.Number"></SimplyFilter>
        <SimplyFilter Field="HandlerName" Default="true" Text="Handler" Type="@SearchyDataType.Text"></SimplyFilter>
        <SimplyFilter Field="Started" Text="Date" Type="@SearchyDataType.Date"></SimplyFilter>
    </Filters>
    <Columns>
        <SimplyColumn Field="Id" Title="Id" />
        <SimplyColumn Field="FirstName" Title="First Name" />
        <SimplyColumn Field="LastName" Title="Last Name" />
        <SimplyColumn Field="Age" />
        <SimplyColumn Field="Married" />
        <SimplyColumn Field="EmploymentStatus" />
        <SimplyColumn Field="Country" />
        <SimplyColumn Field="Salary.Amount" />
        <SimplyColumn Field="Salary.Currency" />
    </Columns>
</SimplySearch>



@code{

    void RowClick(string index)
    {
        navigationManager.NavigateTo($"/form?id={index}");
    }
}